// http://eslint.org/docs/user-guide/configuring

{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "rules": {
    "object-curly-spacing": 0,
    "arrow-parens": 0,
    "generator-star-spacing": 0,
    "comma-spacing": ["error", { "before": false, "after": true }],
    "semi": ["error", "always"],
    "quotes": ["error", "single"]
  }
}